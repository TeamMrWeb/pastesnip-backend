{
    "name": "pastesnip-backend",
    "version": "1.0.0",
    "description": "Pastesnip backend",
    "author": "Manuel Cabral",
    "license": "MIT",
    "private": true,
    "main": "src/index.js",
    "keywords": [
        "graphql",
        "yoga",
        "node",
        "mongodb",
        "mongoose",
        "snippets",
        "pastesnip"
    ],
    "scripts": {
        "start": "set NODE_ENV=production && node src/index.js",
        "dev": "SET NODE_ENV=development && nodemon src/index.js",
        "test:unit": "SET NODE_ENV=test && mocha ./tests/unit/*.js --exit --timeout 0",
        "test:integration": "SET NODE_ENV=test && mocha ./tests/integration/*.js --exit --timeout 0"
    },
    "dependencies": {
        "@graphql-tools/load-files": "^6.6.1",
        "bcrypt": "^5.1.0",
        "graphql": "^16.6.0",
        "graphql-yoga": "^3.3.0",
        "mongoose": "^6.9.0"
    },
    "devDependencies": {
        "chai": "^4.3.7",
        "dotenv": "^16.0.3",
        "mocha": "^10.2.0",
        "nodemon": "^2.0.20"
    }
}